{
    "name": "pushin-pets",
    "version": "1.0.0",
    "description": "pushin-pets",
    "main": "index.js",
    "scripts": {
        "build:mud": "rimraf src/codegen && mud tablegen && mud worldgen",
        "build:abi-ts": "mud abi-ts",
        "deploy:testnet": "yarn build:mud && mud deploy --rpc https://follower.testnet-chain.linfra.xyz",
        "deploy:goerli": "yarn build:mud && mud deploy --rpc https://goerli.infura.io/v3/57b7823b502145a9b4abcc6f383f049d",
        "deploy:optimism": "yarn build:mud && mud deploy --rpc https://optimism-goerli.infura.io/v3/d7110c1add02415b923402c67dce0311",
        "deploy:arbitrum": "yarn build:mud && mud deploy --rpc https://arbitrum-goerli.infura.io/v3/d7110c1add02415b923402c67dce0311",
        "deploy:immutable": "yarn build:mud && mud deploy --rpc https://rpc.testnet.immutable.com/ --id 13473",
        "lint": "hardhat check && eslint ./test",
        "lint:fix": "eslint --fix --ext js,.jsx,.ts,.tsx .",
        "lint:fix-cache": "eslint --fix --cache --ext js,.jsx,.ts,.tsx .",
        "format": "hardhat format && prettier --write \"**/*.{js,jsx,ts,tsx}\"",
        "compile": "hardhat compile",
        "test": "hardhat test",
        "coverage": "hardhat coverage",
        "deploy:test": "npx hardhat run ./scripts/deploy-pushin-pets.ts --network test",
        "configure:test": "npx hardhat run ./scripts/configure-test-data.ts --network test",
        "deploy:main": "npx hardhat run ./scripts/deploy.ts --network main",
        "verify:test": "hardhat verify --network test 0x4a0ec98f29089633917d3e52e47bb48fc0979276"
    },
    "author": "Innowise",
    "license": "MIT",
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
